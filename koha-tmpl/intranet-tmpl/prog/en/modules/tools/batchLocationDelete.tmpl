<div id="doc3" class="yui-t2">
    <div id="bd">
        <div id="yui-main">
            <div class="yui-b">
                <h1>Batch item location deletion</h1>
                <div class="yui-g">
	                <form name="f" action="/cgi-bin/koha/tools/batchLocationDelete.pl" method="post">
	                	<!-- TMPL_IF NAME="message" -->
	                		<div class="dialog alert"><!-- TMPL_VAR name="message" --></div>
	                	<!-- /TMPL_IF -->
						<fieldset class="rows">
			        		<legend>Specify the item callnumber and location</legend>
			        		<ol>
			        			<li>
						            <label for="location">Item Location : </label>
						            <select id="location" name="location">
						            	<!-- TMPL_LOOP NAME="location_loop" -->
											<option value="<!-- TMPL_VAR NAME="authorised_value" -->" <!-- TMPL_IF NAME="selected" -->selected="selected"<!-- /TMPL_IF -->><!-- TMPL_VAR NAME="lib" --></option>
										<!-- /TMPL_LOOP -->
									</select>
						        </li>
			        			<li>
						            <label for="callnumber_type">Items are located in : </label>
						            <select name="callnumber_type" id="callnumber_type" size="1">
										<option value="store_callnumber" <!-- TMPL_IF NAME="store_callnumber" -->selected="selected"<!-- /TMPL_IF --> >Store</option>
										<option value="freeaccess_callnumber" <!-- TMPL_IF NAME="freeaccess_callnumber" -->selected="selected"<!-- /TMPL_IF --> >Free Access</option>
									</select>
						        </li>
						        <li>
						            <label for="callnumber_prefix">Item callnumber prefix: </label>
						            <input type="text" name="callnumber_prefix" id="callnumber_prefix" value="<!-- TMPL_VAR NAME="callnumber_prefix" -->" />
						        </li>
						        <li>
						        	<label for="callnumber_min">begin: </label>
						            <input type="text" name="callnumber_min" id="callnumber_min" value="<!-- TMPL_VAR NAME="callnumber_min" -->" />
						        </li>
						        <li>
						        	<label for="callnumber_max">end: </label>
						            <input type="text" name="callnumber_max" id="callnumber_max" value="<!-- TMPL_VAR NAME="callnumber_max" -->" />
						        </li>
			                </ol>
		                </fieldset>
		                <fieldset class="action">
		                	<input type="hidden" name="op" value="op" />
		                	<input type="submit" value="Submit" class="button" onclick="if (!document.getElementById('callnumber_prefix').value) {return confirm('If callnumber prefix is left empty, the location and physical address of ALL items in '+document.getElementById('location').children[document.getElementById('location').selectedIndex].text+' will be erased.');}"/>
		                </fieldset>
	                </form>
                </div>
            </div>
        </div>
        
        <div class="yui-b">
            <!-- TMPL_INCLUDE NAME="tools-menu.inc" -->
        </div>
    </div>
